{
  "name": "mcp-kaspa",
  "version": "0.1.0",
  "description": "MCP server for Kaspa node RPC integration",
  "author": "Artem Bogomaz",
  "license": "MIT",
  "keywords": ["mcp", "kaspa", "blockchain", "rpc", "server"],
  "homepage": "https://github.com/your-username/mcp-kaspa",
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/mcp-kaspa.git"
  },
  "main": "src/main.py",
  "scripts": {
    "start": "uvx --from . kaspa-mcp-server",
    "docker:build": "docker build -t kaspa-mcp-server:latest .",
    "docker:run": "docker run -i --rm --env KASPA_RPC_URL=http://localhost:16110 kaspa-mcp-server:latest"
  },
  "mcp": {
    "name": "kaspa-mcp-server",
    "description": "Interact with Kaspa blockchain node via RPC",
    "command": "uvx",
    "args": ["--from", ".", "kaspa-mcp-server"],
    "env": {
      "KASPA_RPC_URL": "http://localhost:16110"
    },
    "tools": [
      {
        "name": "get_node_info",
        "description": "Get Kaspa node information and connection status"
      },
      {
        "name": "get_block_by_hash",
        "description": "Get detailed information about a specific block by its hash"
      },
      {
        "name": "get_latest_daa",
        "description": "Get the latest DAA (Difficulty Adjustment Algorithm) score"
      },
      {
        "name": "get_block_dag_info",
        "description": "Get comprehensive BlockDAG information"
      }
    ],
    "resources": [
      {
        "uri": "kaspa://status",
        "description": "Server status and configuration"
      },
      {
        "uri": "kaspa://docs/examples",
        "description": "Usage examples"
      }
    ]
  }
}